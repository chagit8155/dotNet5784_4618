<Window x:Class="PL.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
         Background="#FFC7E2E8"
        mc:Ignorable="d"
        Title="LogInWindow" Height="450" Width="800">
    <Window.Resources>
        <FontFamily x:Key="myPasswordFont">"/password-font.ttf"

        </FontFamily>

    </Window.Resources>
    <Canvas>
        <Label Content="user name:" FontWeight="Bold" Height="45" Width="80" Margin="100,172,620,217"/>
        <Label Content="password:"  FontWeight="Bold" Height="45" Width="80" Margin="100,241,620,148"/>
        <TextBox Text="{Binding UserId, Mode=TwoWay}" Height="23" Canvas.Left="185" Canvas.Top="172" HorizontalAlignment="Left" VerticalAlignment="Center" Width="200"  />
        <Button Content="Enter" Height="45" Width="80" Margin="228,297,492,92" Click="btnEnter_Click"/>
        <!--<PasswordBox Password="gfggg"/>-->
        <TextBox Text="{Binding passWord,Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Top" Width="197" Height="23" FontFamily="/password-font.ttf" Canvas.Left="188" Canvas.Top="241"/>
    </Canvas>

</Window>
